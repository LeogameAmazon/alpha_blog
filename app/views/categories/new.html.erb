<h1 class="text-center mt-4" >Create a new category.</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">
                <%= render 'shared/errors', obj: @category %>
                <%= form_with(model: @category, class: "shadow p-3 mb-2 bg-info rounded",local: true) do |f|%>
                <div class="form-group row">
                    <%= f.label :name,"Category name", class: "col-2 col-form-label text-light"%>
                    <div class="col-10 mt-1">
                        <%= f.text_field :name, class:"form-control shadow rounded", placeholder: "Enter a name" %>
                    </div>
                </div>
                
                    <div class="form-group row justify-content-center mt-4"  style="height:50px; width:150px">
                        <%= f.submit class: "btn btn-outline-light" %>
                    </div>

                <% end %>

            </div>
                <div class="col-3 mb-3">
                    <%= link_to  'Keep back to the Articles Listing', articles_path, class: "text-primary", method: :get %>
                </div>
        </div>
</div>